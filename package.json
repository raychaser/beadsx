{
  "name": "beadsx",
  "displayName": "Beads Issue Tracker",
  "description": "VSCode panel for viewing beads issue tracking state",
  "version": "0.1.4",
  "publisher": "raychaser",
  "repository": {
    "type": "git",
    "url": "https://github.com/raychaser/beadsx.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "beadsx",
          "title": "Beads",
          "icon": "$(checklist)"
        }
      ]
    },
    "views": {
      "beadsx": [
        {
          "id": "beadsxIssues",
          "name": "Beads",
          "icon": "$(checklist)"
        }
      ]
    },
    "commands": [
      {
        "command": "beadsx.refresh",
        "title": "Refresh Issues",
        "icon": "$(refresh)"
      },
      {
        "command": "beadsx.filter",
        "title": "Filter Issues",
        "icon": "$(filter)"
      },
      {
        "command": "beadsx.showDetail",
        "title": "Show Issue Detail"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "beadsx.filter",
          "when": "view == beadsxIssues",
          "group": "navigation"
        },
        {
          "command": "beadsx.refresh",
          "when": "view == beadsxIssues",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Beads Issue Tracker",
      "properties": {
        "beadsx.autoReloadInterval": {
          "type": "number",
          "default": 10,
          "minimum": 0,
          "description": "Interval in seconds to automatically reload issues (0 to disable)"
        },
        "beadsx.commandPath": {
          "type": "string",
          "default": "",
          "description": "Path to the bd command (leave empty to use PATH)"
        },
        "beadsx.autoExpandOpen": {
          "type": "boolean",
          "default": true,
          "description": "Automatically expand open/in-progress issues to show children"
        },
        "beadsx.shortIds": {
          "type": "boolean",
          "default": false,
          "description": "Show shortened issue IDs without prefix (e.g., '123' instead of 'beadsx-123')"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run bundle",
    "compile": "tsc -p ./",
    "bundle": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --minify",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package --no-dependencies --allow-missing-repository",
    "install-ext": "rm -f beadsx-*.vsix && vsce package --no-dependencies --allow-missing-repository && code --install-extension beadsx-*.vsix --force",
    "install-ext-cursor": "rm -f beadsx-*.vsix && vsce package --no-dependencies --allow-missing-repository && cursor --install-extension beadsx-*.vsix --force"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/vsce": "^3.7.0",
    "esbuild": "^0.27.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  }
}
