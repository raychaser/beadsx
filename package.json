{
  "name": "beadsx",
  "displayName": "Beads Issue Tracker",
  "description": "VSCode panel for viewing beads issue tracking state",
  "version": "0.0.1",
  "publisher": "raychaser",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "beads",
          "title": "Beads",
          "icon": "$(checklist)"
        }
      ]
    },
    "views": {
      "beads": [
        {
          "id": "beadsIssues",
          "name": "Issues"
        }
      ]
    },
    "commands": [
      {
        "command": "beads.refresh",
        "title": "Refresh Issues",
        "icon": "$(refresh)"
      },
      {
        "command": "beads.filter",
        "title": "Filter Issues",
        "icon": "$(filter)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "beads.filter",
          "when": "view == beadsIssues",
          "group": "navigation"
        },
        {
          "command": "beads.refresh",
          "when": "view == beadsIssues",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Beads Issue Tracker",
      "properties": {
        "beads.autoReloadInterval": {
          "type": "number",
          "default": 10,
          "minimum": 0,
          "description": "Interval in seconds to automatically reload issues (0 to disable)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package --allow-missing-repository",
    "install-ext": "vsce package --allow-missing-repository && cursor --install-extension beadsx-0.0.1.vsix --force"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/vsce": "^3.7.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  }
}
